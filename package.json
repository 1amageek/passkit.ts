{
  "private": false,
  "name": "@1amageek/passkit",
  "version": "0.3.1",
  "scripts": {
    "lint": "./node_modules/.bin/tslint -p tslint.json",
    "prepare": "npm run build",
    "build": "./node_modules/.bin/tsc -d",
    "serve": "npm run build && firebase serve --only functions",
    "shell": "npm run build && firebase experimental:functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "description": "passkit.ts is Passkit generator",
  "contributors": [
    {
      "name": "Norikazu Muramoto",
      "email": "tmy0x3@icloud.com"
    }
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/1amageek/passkit.ts.git"
  },
  "keywords": [
    "passkit",
    "apple",
    "typescript"
  ],
  "author": "1amageek",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/1amageek/passkit.ts/issues"
  },
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib/*"
  ],
  "dependencies": {
    "archiver": "^2.1.1",
    "dateformat": "^3.0.3",
    "global": "^4.3.2",
    "mkdirp": "^0.5.1",
    "node-forge": "^0.8.0",
    "request": "^2.88.0",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@types/archiver": "^2.1.2",
    "@types/jest": "^23.3.9",
    "@types/mkdirp": "^0.5.2",
    "@types/node": "^10.12.10",
    "@types/node-forge": "^0.7.11",
    "@types/request": "^2.48.1",
    "@types/uuid": "^3.4.4",
    "cli": "^1.0.1",
    "firebase-admin": "^5.9.1",
    "jest": "^24.1.0",
    "ts-jest": "^23.10.5",
    "tslint": "^5.11.0",
    "typescript": "^3.3.3"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
